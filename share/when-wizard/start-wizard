# Main application script: prepare all paths and start application
# Usage: when-wizard start-wizard

import os
import sys
import time

import argparse
import subprocess
import locale

from utility import verify_user_folders, datastore, oerr
from resources import RESOURCES


# setup i18n for both applet text and dialogs
locale.setlocale(locale.LC_ALL, locale.getlocale())
locale.bindtextdomain(APP_NAME, APP_LOCALE_FOLDER)
locale.textdomain(APP_NAME)
_ = locale.gettext


def gui_main():
    from wizard import WizardApplication
    app = WizardApplication()
    return app.run()


# take care of parsing possible arguments (if any) and run the GUI application
def main():
    me = os.path.basename(__file__)
    if subprocess.call([APP_WHEN, '--query']) != 0:
        oerr(me, RESOURCES.CLI_ERR_NOTFOUND_WHEN)
        return 2
    verify_user_folders()
    if os.path.exists(datastore.filename):
        datastore.load()
    else:
        datastore.save()
    r = gui_main()
    return r


# end.
